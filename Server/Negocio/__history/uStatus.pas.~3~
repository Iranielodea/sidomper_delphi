begin
  lQry := TFDQuery.Create(Nil);
  try
    lQry.Connection := DM.Conexao;
    lQry.SQL.Add(CNotificacao + ' WHERE Sta_Id = ' + IntToStr(IdStatus));
    lQry.SQL.Add(' AND Sta_NotificarSupervisor = 1');
    lQry.Open();
    Result := (lQry.Fields[0].AsInteger > 0);
