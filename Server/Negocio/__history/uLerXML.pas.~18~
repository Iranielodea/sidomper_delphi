procedure TLerXML.GravarDadosClientes(cliente: TClienteVO);
begin
  GravarModulo(cliente.ClienteModulo);
  GravarProduto(cliente.ClienteModulo);
  GravarCidade(cliente);
  GravarClienteII(cliente);
  GravarModuloProduto(Cliente);
end;

