var
  Negocio: TServerModule2Client;
begin
  Negocio := TServerModule2Client.Create(DM.Conexao.DBXConnection);
  try
    Result := StrToInt(Negocio.OrcamentoProximoNumero().ToString());
  finally
    FreeAndNil(Negocio);
  end;
end;

