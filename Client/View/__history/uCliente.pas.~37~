  if tsEmail.Showing then
  begin
    if btnExcluirEmail.Enabled then
      btnExcluirEmailClick(Self);
  end;
end;

procedure TfrmCliente.ExcluirModulo;
begin
  if tsModulo.Showing then
  begin
