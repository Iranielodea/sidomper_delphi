procedure TOrcamentoVO.SetSituacao(const Value: Integer);
begin
  // 1 - Em Analise
  // 2 - Aprovado
  // 3 - Não Aprovado

  if Value in [1, 2, 3, 4] then
    FSituacao := Value
  else
    FSituacao := 1;
end;

